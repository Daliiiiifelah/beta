    "moduleResolution": "Node",            
    "jsx": "react-jsx",                    
    "esModuleInterop": true,               
    "allowSyntheticDefaultImports": true,  
    "skipLibCheck": true,                  
    "forceConsistentCasingInFileNames": true,
    "strict": true,

    // bring in Viteâ€™s import.meta.env types + Convex global types
    "types": ["vite/client", "convex"]
